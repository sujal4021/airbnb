<% layout("/layouts/boilerplate.ejs") -%>

<body>

  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h1>Listing Details:</h1>
    </div>
      <div class="card col-6 offset-3" >
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="...">
        <div class="card-body">
          <p class="card-text"> <b><%= listing.title %></b> <br>
            <%= listing.description %> <br> 
            &#8377 <%= listing.price.toLocaleString("en-IN")%> <br>
            <%= listing.location %> <br>
            <%= listing.country %>
            
          </p>
        </div>
      </div>
  

  <br>
  <div class="btns gap-2">
    <a  class="btn btn-success ps-5 px-5" href="/listings/<%=listing._id %>/edit ">Edit </a>

    <br>
    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-danger ps-5 px-5">Delete </button>
    </form>
  </div>
  
</div>
</body>